version: '3.3'
services:
  portainer:
    container_name: portainer
    image: portainer/portainer-ce:{{ portainer_version }}
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - portainer_data:/data
    ports:
      - 9000:9000
      - 9443:9443
      - 8000:8000
    restart: always
volumes:
  portainer_data:

  
